{
  "manifest_version": 3,
  "name": "44agents",
  "version": "1.0.0",
  "description": "Convert natural language descriptions into executable n8n workflows using AI",
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "offscreen",
    "tabs",
    "downloads"
  ],
  "host_permissions": [
    "*://*.n8n.io/*",
    "https://*/n8n/*",
    "http://localhost/*",
    "https://api.anthropic.com/*",
    "https://api.openai.com/*",
    "https://generativelanguage.googleapis.com/*"
  ],
  "background": {
    "service_worker": "src/background/service-worker.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.n8n.io/*",
        "https://*/n8n/*",
        "http://localhost/n8n/*",
        "http://localhost:*/n8n/*",
        "https://localhost:*/n8n/*"
      ],
      "js": ["content.js"],
      "css": ["content.css"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "44agents - AI Workflow Generator"
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["content.css", "offscreen.html"],
      "matches": ["<all_urls>"]
    }
  ]
}